{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": [
      "DOM",
      "ES5",
      "ES6"
    ],
    "module": "ES6",
    "moduleResolution": "Node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "./TSDist/",
    "pretty": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES6"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
