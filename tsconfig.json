{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "Node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "./dist/",
    "pretty": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES6"
  },
  "include": [
    "./src/**/*"
  ]
}
